
@{
    ViewBag.Title = "MyProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.LoadScripts = Scripts.Render("~/bundles/contact");
}

<div>
    <form role="form">
        <div class="form-group">
            <label for="">Name</label>
            <input ng-model="contact.Name" type="text" class="form-control" placeholder="Name" required/>
        </div>
        <div class="form-group">
            <label for="">E-mail</label>
            <input ng-model="contact.Email" type="text" class="form-control" placeholder="E-mail" />
        </div>
        <div class="form-group">
            <label for="">Cell Phone</label>
            <input ng-model="contact.CellPhone" type="text" class="form-control" placeholder="Cell Phone" />
        </div>
        <div class="form-group">
            <label for="">Commercial Phone</label>
            <input ng-model="contact.CommercialPhone" type="text" class="form-control" placeholder="Commercial Phone" />
        </div>
        <div class="form-group">
            <label for="">Home Phone</label>
            <input ng-model="contact.HomePhone" type="text" class="form-control" placeholder="Home Phone" />
        </div>
        <div class="form-group">
            <button ng-click="save()" class="btn btn-success">Save</button>
            <button ng-click="return()" class="btn btn-warning">Return</button>
        </div>
    </form>
</div>